// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  name      String
  email     String @unique
  password  String
  telefone  String
  cpf       String
  hierarchy Int
}

model Teacher {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  subjects  Subjects[]
  hierarchy Int
}

model Coordinator {
  id        Int    @id @default(autoincrement())
  name      String
  email     String @unique
  password  String
  hierarchy Int
}

model Subjects {
  id        Int     @id @default(autoincrement())
  name      String
  teacher   Teacher @relation(fields: [subjectId], references: [id])
  subjectId Int
}
